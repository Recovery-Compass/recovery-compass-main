{
  "name": "@recovery-compass/mcp-claude",
  "version": "0.1.0",
  "private": true,
  "description": "Isolated compile-once MCP server for Claude. Reason: least-privilege dependency isolation and reproducible bundle.",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "build": "esbuild server.ts --bundle --platform=node --format=cjs --outfile=server.js",
    "check": "node -e \"require('fs').accessSync('server.js'); console.log('server.js present')\""
  },
  "engines": {
    "node": "^18 || ^20"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@modelcontextprotocol/sdk": "^1.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "esbuild": "0.23.0"
  }
}
